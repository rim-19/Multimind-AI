{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "server.js" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src * 'self' data: blob: https://accounts.google.com https://*.gstatic.com https://*.google.com; frame-ancestors 'self' https://accounts.google.com;"
        },
        {
          "key": "X-Frame-Options",
          "value": "ALLOW-FROM https://accounts.google.com"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}



